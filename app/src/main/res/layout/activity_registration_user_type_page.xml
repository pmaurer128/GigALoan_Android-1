<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".GigALoanRegistration1">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/UserType_Message_text"
        android:id="@+id/UserType_View"
        android:layout_marginTop="59dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Help_Icon"
        android:longClickable="false"
        android:clickable="true"
        android:src="@mipmap/help_icon"
        android:layout_alignBottom="@+id/UserType_View"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Client_ck_box_text"
        android:id="@+id/Client_Rd_Bttn"
        android:clickable="false"
        android:textSize="25sp"
        android:checked="false"
        android:buttonTint="#a8111ed6"
        android:layout_marginBottom="179dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Student"
        android:id="@+id/Student_Rd_Bttn"
        android:checked="true"
        android:clickable="true"
        android:buttonTint="#a8111ed6"
        android:textSize="25sp"
        android:layout_alignTop="@+id/Client_Rd_Bttn"
        android:layout_alignRight="@+id/Help_Icon"
        android:layout_alignEnd="@+id/Help_Icon" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="&lt;-Back"
        android:id="@+id/Type_Back_Bttn"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="28dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Next ->"
        android:id="@+id/Type_Next_Bttn"
        android:layout_alignBottom="@+id/Type_Back_Bttn"
        android:layout_alignLeft="@+id/Student_Rd_Bttn"
        android:layout_alignStart="@+id/Student_Rd_Bttn" />

</RelativeLayout>
